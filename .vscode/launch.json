{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations":
	[
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/debug/MultiPLAY",
			"args": ["-module", "/code/MultiPLAY/Samples/mods/ramagard.s3m"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			//"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands":
			[
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build Debug"
		},
		{
			"name": "(gdb) Launch (Release)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/release/MultiPLAY",
			"args": ["-module", "/code/MultiPLAY/Samples/mods/war.s3m"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			//"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands":
			[
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build Release"
		}
	]
}