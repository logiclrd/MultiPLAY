{
	"version": "2.0.0",
	"command": "bash",
	"options":
	{
		"cwd": "${workspaceFolder}"
	},
	"tasks":
	[
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "make debug",
			"group":
			{
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "make release",
			"group":
			{
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		}
	]
}